# Multi-stage build for the collector worker
FROM golang:1.22-alpine AS builder

RUN apk add --no-cache git

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /collector ./cmd/collector

# Runtime image
FROM alpine:3.19

RUN apk add --no-cache ca-certificates tzdata nmap
COPY --from=builder /collector /usr/local/bin/collector
COPY configs/config.yaml /etc/arch/config.yaml

CMD ["collector"]
